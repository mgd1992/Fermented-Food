<%= form_with(model: @ferment) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>

    <%= form.label :photos, "Subir mas fotos", class: "mt-3" %>
    <%= form.file_field :photos, required: true, multiple: true, class: "py-2 px-5 mt-2" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
