
<div class="mx-auto my-4 border w-50">

  <%= link_to "Go back", ferments_path, class: "btn btn-outline-success  m-4" %>

  <h1 class="text-center">Update ferment</h1>
  <%= form_with(model: @ferment) do |form| %>

    <div class=" d-flex flex-column justify-content-center align-items-center p-5 my-5">

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="d-flex align-items-center my-3">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <%= form.label :photos, "Subir mas fotos", class: "mt-5" %>
      <%= form.file_field :photos, multiple: true, class: "py-2 px-5 my-3" %>

      <div class="actions">
        <%= form.submit "Update Ferment", class: "btn btn-outline-success" %>
      </div>

    </div>

  <% end %>

</div>
