<div class="mt-4">
  <% @photos_by_day.sort.reverse.each do |date, photos| %>
    <div class="mb-5">
      <div class="d-flex align-items-center mb-3">
        <div class="p-2 bg-warning text-dark rounded fw-bold text-center" style="min-width: 50px;">
          <div class="small"><%= date.strftime("%b") %></div>
          <div><%= date.strftime("%d") %></div>
        </div>
        <div class="ms-3 text-secondary border-bottom w-100 pb-1">
          <%= date == Date.today ? "Subido hoy" : "Registro del #{date.strftime("%Y")}" %>
        </div>
      </div>

      <div class="row g-2">
        <% photos.each do |photo| %>
          <div class="col-4 col-md-3" id="<%= dom_id(photo) %>">
            <div class="position-relative photo-item">
              <%= cl_image_tag photo.key,
                  height: 300,
                  width: 300,
                  crop: :fill,
                  class: "img-fluid rounded border border-secondary" %>

              <% if @ferment.user == current_user %>
                <%= link_to "âœ•",
                    destroy_photo_ferment_path(@ferment, photo_id: photo.id),
                    class: "delete-photo-btn",
                    data: { turbo_method: :delete } %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
