<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <%= form_with(model: @ferment, local: true, class: "border border-success rounded-3 p-4 m-5") do |form| %>


        <h2 class="text-center mb-4 text-success">Crear Fermento</h2>


        <div class="form-group mb-3">
          <%= form.label :name, "Nombre del Fermento", class: "form-label text-success" %>
          <%= form.text_field :name, placeholder: "Nombre del fermento..", class: "form-control border-success" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :ingredients, "Ingredientes", class: "form-label text-success" %>
          <%= form.text_area :ingredients, placeholder: "Ingredientes", rows: 3, class: "form-control border-success" %>
        </div>


        <div class="form-group mb-3">
          <%= form.label :instructions, "Instrucciones", class: "form-label text-success" %>
          <%= form.text_area :instructions, placeholder: "Instrucciones ..", rows: 3, class: "form-control border-success" %>
        </div>

         <div class="mb-3">
          <%= form.label :fermentation_time, "Tiempo de fermentacion", class: "form-label text-success" %>
          <%= form.text_field :fermentation_time, class: "form-control border-success", placeholder: "Tiempo de fermentacion.." %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :photos, "Fotos", class: "form-label text-success" %>
          <%= form.file_field :photos, multiple: true, class: "form-control border-success" %>
        </div>


        <% if current_user %>
          <%= form.hidden_field :user_id, value: current_user.id %>
        <% else %>
          <p>You have to log-in/sign-up before creating a new ferment</p>
        <% end %>


        <div class="d-grid gap-2">
          <%= form.submit "Crear", class: "btn btn-outline-success" %>
          <%= link_to "Volver", ferments_path, class: "btn btn-outline-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
