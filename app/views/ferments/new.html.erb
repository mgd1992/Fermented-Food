<div class="d-flex m-5 justify-content-center items-center">

  <%= form_with(model: @ferment, local: true) do |form| %>

    <div class="p-5 my-5 d-flex flex-column align-items-center border">

      <%= form.label :Nombre %>
      <%= form.text_field :name, placeholder: "Nombre del fermento..", class: "py-2 px-5 mt-2" %>

      <%= form.label :Descripcion, class: "mt-3" %>
      <%= form.text_area :description,  placeholder: "Descripcion..", class: "py-2 px-5 mt-2" %>

      <%= form.label :photos, "Sube una foto", class: "mt-3" %>
      <%= form.file_field :photos, required: true, multiple: true,  class: "py-2 px-5 mt-2" %>
    </div>


    <%= form.hidden_field :user_id, value: current_user.id %>

    <%= form.submit :Crear, class: "btn btn-outline-success w-100" %>

  <% end %>

</div>
