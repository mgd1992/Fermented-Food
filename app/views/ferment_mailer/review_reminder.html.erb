<div style="max-width:600px;margin:0 auto;font-family:Arial,sans-serif;background:#f4f4f8;border-radius:12px;padding:16px;">

  <!-- Header -->
  <div style="text-align:center;color:#fff;background:#6f42c1;padding:16px;border-radius:12px 12px 0 0;">
    <h2 style="margin:0;font-size:1.4rem;">⏰ ¡Hora de revisar tu fermento!</h2>
  </div>

  <!-- Imagen -->
  <div style="text-align:center;margin:16px 0;">
    <% if @ferment.photos.attached? %>
      <% @ferment.photos.each do |photo| %>
        <%= image_tag url_for(photo), style:"width:80px;height:80px;object-fit:cover;border-radius:6px;margin:0 4px;" %>
      <% end %>
    <% else %>
      <p style="font-style:italic;color:#868e96;">No hay fotos adjuntas</p>
    <% end %>
  </div>

  <!-- Información -->
  <div style="text-align:center;padding:0 12px;">
    <h4 style="margin-bottom:8px;color:#343a40;"><%= @ferment.name %></h4>
    <p style="color:#495057;font-size:0.95rem;line-height:1.4;margin-bottom:12px;">
      Comenzó el <strong><%= @ferment.start_date.strftime("%d/%m/%Y") %></strong><br>
      Tiempo de fermentación: <strong><%= @ferment.revisar_fermentos %> días</strong><br>
      Llevas <strong><%= ((Time.current.to_date - @ferment.start_date.to_date).to_i) %> días</strong>
    </p>

    <!-- Barra de progreso -->
    <div style="background:#dee2e6;height:18px;border-radius:9px;margin-bottom:12px;">
      <% progress = [((Time.current.to_date - @ferment.start_date.to_date).to_i.to_f / @ferment.revisar_fermentos)*100, 100].min.round %>
      <div style="width:<%= progress %>%;background:<%= progress < 100 ? '#ffc107' : '#28a745' %>;height:18px;border-radius:9px;text-align:center;color:#fff;font-weight:bold;line-height:18px;">
        <%= progress %>%
      </div>
    </div>

    <!-- Mensaje dinámico -->
    <p style="font-weight:600;color:#212529;margin-bottom:12px;">
      <%= progress < 100 ? "¡Ya casi está listo!" : "¡Tu fermento debería revisarse hoy!" %>
    </p>

    <!-- Botón -->
    <a href="<%= ferment_url(@ferment) %>" style="display:inline-block;background:#6f42c1;color:#fff;font-weight:bold;padding:8px 16px;border-radius:25px;text-decoration:none;font-size:1rem;">
      Ver fermento
    </a>
  </div>

  <!-- Footer -->
  <div style="text-align:center;color:#868e96;font-size:0.85rem;padding:8px;border-top:1px solid #dee2e6;margin-top:12px;">
    Si ya revisaste este fermento, puedes ignorar este correo.
  </div>

</div>
