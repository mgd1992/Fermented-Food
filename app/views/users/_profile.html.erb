<div class="profile text-center text-light bg-dark p-4 rounded-3 mb-4">
  <% if user.photo.attached? %>
    <%= image_tag user.photo.variant(resize_to_fill: [200, 200]), class: "img-fluid rounded-circle mb-3" %>
  <% else %>
    <div class="placeholder-img rounded-circle bg-secondary mb-3" style="width: 200px; height: 200px;"></div>
  <% end %>

  <h3 class="text-light mt-2 mb-1"><%= user.full_name %></h3>
  <p class="text-light"><%= user.email %></p>
  <p class="text-warning">Cantidad de fermentos: <strong><%= user.ferments.count %></strong></p>

  <% if user_signed_in? && user == current_user %>
    <div class="d-flex flex-column justify-content-center mt-3">
      <%= link_to 'Crear Fermento', new_ferment_path, class: "btn btn-outline-info px-4 py-2 rounded-3 my-2" %>
      <%= link_to 'Editar Perfil', edit_user_path(user), class: "btn btn-outline-light btn-sm my-2 py-2" %>
    </div>
  <% end %>
  <div class="mt-3">
    <% if user_signed_in? && current_user == @user %>
      <%= link_to "ğŸ“¥ Bandeja de entrada", messages_path, class: "btn btn-outline-warning" %>
      <p><%= current_user.received_messages.where(read: false).count %> mensajes sin leer</p>
    <% end %>

    <% if user_signed_in? && current_user != @user %>
      <%= link_to "âœ‰ï¸ Enviar mensaje", new_message_path(recipient_id: @user.id), class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
