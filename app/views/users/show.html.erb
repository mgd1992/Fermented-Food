<div class="p-5 d-flex justify-content-between align-items-center">
  <%= link_to '/', class: 'nav-link text-light' do %>
    <h1 class="nav-title">Cool Beans</h1>
  <% end %>
  <% if user_signed_in? && @user == current_user %>
    <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete, class:"btn btn-outline-success rounded" %>
  <% end %>
</div>

<div class="profile mx-auto my-5">
  <% if @user.photo.attached? %>
    <%= image_tag @user.photo, crop: :fill %>
    <%= link_to edit_user_path(@user) do %>
      <i class="fa-solid fa-camera-retro text-dark"></i>
    <% end %>
    <h3 class="text-dark my-4"><%= @user.full_name %></h3>
  <% end %>
  <p class="text-dark"><%= @user.email %></p>
</div>

<hr class="text-center my-3 w-50 mx-auto">

<h4 class="text-center my-4">My Ferments</h4>

<div class="ferments-user">
  <% @user.ferments.each do |ferment| %>

    <ul>
      <li>
        <%= link_to ferment_path(ferment) do %>
          <h4><%= ferment.name %>
          <% if ferment.photos.attached? %>
            <%= image_tag ferment.photos.first, crop: :fill, class:" w-25" %>
          <% end %>
        <% end %>
      </li>
    </ul>

  <% end %>
</div>-

<%= link_to "All Ferments", ferments_path %>
