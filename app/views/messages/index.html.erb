<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">ğŸ’Œ Bandeja de entrada</h1>
    <%= link_to "Volver a mi perfil", user_path(current_user), class: "btn btn-outline-warning" %>
  </div>

  <% if @messages.any? %>
    <div class="row g-3">
      <% @messages.each do |msg| %>
        <div class="col-12 col-md-6 mb-4">
          <%= link_to message_path(msg), class: "text-decoration-none text-dark" do %>
            <div class="card shadow-sm h-100">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="card-title"><%= msg.subject %></h5>
                  <p class="card-text mb-2">
                    De: <%= link_to msg.sender.full_name, profile_path(msg.sender), class: "text-decoration-none text-primary" %>
                  </p>
                  <p class="text-muted mb-0"><small>Recibido: <%= msg.created_at.strftime("%d %b %Y, %H:%M") %></small></p>
                </div>

                <% unless msg.read? %>
                  <span class="badge bg-success mt-2 align-self-start">Nuevo</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>
  <% else %>
    <div class="text-center py-5">
      <p class="fs-5 text-muted">No tienes mensajes aÃºn ğŸ’Œ</p>
    </div>
  <% end %>

</div>
