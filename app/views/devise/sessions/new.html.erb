<div class="form-page-layout py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-5">
        <div class="f-form-card shadow-lg">
          <div class="card-body p-4 p-md-5">

            <div class="form-header text-center mb-5">
              <%= link_to root_path, class: "text-decoration-none" do %>
                <h1 class="fw-bold text-warning mb-2" style="letter-spacing: -1px;">Cool Beans</h1>
              <% end %>
              <h2 class="fw-bold text-white mb-1">Bienvenido!</h2>
              <p class="text-secondary small text-uppercase letter-spacing-1">Continua fermentando!</p>
            </div>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "custom-dark-form" }) do |f| %>

              <section class="form-section mb-4">
                <div class="mb-3">
                  <%= f.label :email, "Correo Electrónico", class: "form-label-custom" %>
                  <%= f.email_field :email, autofocus: true, class: "input-custom", placeholder: "your_email@email.com" %>
                </div>

                <div class="mb-3 position-relative" data-controller="password">
                  <%= f.label :password, "Contraseña", class: "form-label-custom" %>
                  <%= f.password_field :password, class: "input-custom", placeholder: "••••••••", data: { password_target: "input" } %>
                  <button type="button" data-action="click->password#toggle" class="btn btn-link text-secondary position-absolute end-0 bottom-0 mb-2 me-2 text-decoration-none">
                    <i class="bi bi-eye"></i>
                  </button>
                </div>
              </section>

              <% if devise_mapping.rememberable? %>
                <div class="mb-4 d-flex align-items-center gap-2 ms-1">
                  <%= f.check_box :remember_me, class: "form-check-input bg-dark border-secondary" %>
                  <label class="text-secondary small mb-0">Recordarme en este equipo</label>
                </div>
              <% end %>

              <div class="d-grid gap-3 mt-5">
                <%= f.submit "ENTRAR", class: "btn btn-warning btn-lg fw-bold rounded-pill shadow" %>

                <div class="text-center mt-2">
                  <span class="text-secondary small">No tienes cuenta?</span>
                  <%= link_to "REGÍSTRATE", new_registration_path(resource_name), class: "text-warning fw-bold small text-decoration-none ms-2 letter-spacing-1" %>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
