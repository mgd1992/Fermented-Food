<div class="container mt-5 p-5 bg-dark text-light border rounded-3 shadow w-50">
  <%= link_to '/', class: 'nav-link text-light text-center mb-3' do %>
    <h1 class="nav-title border p-2">Cool Beans</h1>
  <% end %>
  <h2 class="text-center mb-3 mt-2">Iniciar sesi√≥n</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
    <div class="form-inputs mb-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: {
                    autocomplete: "email",
                    class: "form-control bg-dark text-light border-light"
                  },
                  label_html: { class: "text-light" } %>

      <%= f.input :password,
                  required: false,
                  input_html: {
                    autocomplete: "current-password",
                    class: "form-control bg-dark text-light border-light"
                  },
                  label_html: { class: "text-light" } %>
    </div>

    <div class="form-actions d-flex justify-content-between">
      <%= f.button :submit, "Log in", class: "btn btn-outline-light w-45" %>
      <%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-outline-info w-45" %>
    </div>
  <% end %>




</div>
