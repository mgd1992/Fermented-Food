<div class="auth-page">
  <div class="auth-card fade-in">

    <%= link_to '/', class: "brand d-block text-center mb-4" do %>
      <h1>Cool Beans</h1>
    <% end %>

    <h2 class="auth-title">Bienvenido de nuevo</h2>
    <p class="auth-subtitle">Seguimos fermentando? ğŸ§‚</p>

    <%= simple_form_for(resource,
      as: resource_name,
      url: session_path(resource_name),
      html: { class: "auth-inputs" }) do |f| %>

      <%= f.error_notification %>

      <%= f.input :email,
        label: false,
        autofocus: true,
        input_html: {
          placeholder: "Email",
          autocomplete: "email"
        } %>

      <div data-controller="password" class="position-relative">
        <%= f.input :password,
          label: false,
          input_html: {
            id: "password-field",
            class: "form-control bg-dark text-light border-secondary",
            placeholder: "ContraseÃ±a",
            data: { password_target: "input" }
          } %>

        <button
          type="button"
          data-action="click->password#toggle"
          class="password-toggle"
        >
          <span data-password-target="icon">ğŸ‘</span>
        </button>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="remember-me">
          <%= f.input :remember_me, as: :boolean, label: "Recordarme" %>
        </div>
      <% end %>

      <%= f.button :submit, "Entrar", class: "auth-button mt-3" %>

    <% end %>

    <div class="auth-footer mt-3 text-center">
      <span>Â¿No tienes cuenta?</span>
      <%= link_to "Crear cuenta", new_registration_path(resource_name), class: "ms-2" %>
    </div>

  </div>
</div>
