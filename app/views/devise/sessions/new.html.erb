<div class="container mt-5 p-5 bg-dark text-light border rounded-3 shadow" style="max-width: 600px;">
  <%= link_to '/', class: 'nav-link text-light text-center mb-5' do %>
    <h1 class="nav-title border p-2">Cool Beans</h1>
  <% end %>

  <div class="text-center mb-4">
    <h2>Iniciar sesión</h2>
  </div>

  <%= simple_form_for(resource,
      as: resource_name,
      url: session_path(resource_name),
      html: { class: "w-100" }) do |f| %>

    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :email,
        label: "Correo electrónico",
        autofocus: true,
        input_html: {
          class: "form-control mb-3 rounded-3 bg-dark text-light border-light",
          autocomplete: "email",
          placeholder: "tu@email.com"
        } %>

      <%= f.input :password,
        label: "Contraseña",
        input_html: {
          class: "form-control mb-3 rounded-3 bg-dark text-light border-light",
          autocomplete: "current-password"
        } %>

      <%= f.input :remember_me,
        label: "Recordarme",
        as: :boolean if devise_mapping.rememberable? %>

    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Entrar", class: "btn btn-outline-info w-50 mb-3" %>
    </div>

  <% end %>

  <div class="text-center">
    <p class="mb-2">¿No tienes cuenta?</p>
    <%= link_to "Registrarse", new_registration_path(resource_name), class: "btn btn-outline-light btn-sm" %>
  </div>
</div>
