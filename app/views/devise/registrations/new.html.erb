        <%= f.input :photo, as: :file, label: false %>
      </div>

      <%= f.button :submit, "Crear cuenta", class: "auth-button" %>

    <% end %>

    <div class="auth-footer">
      <span>Â¿Ya tienes cuenta?</span>
      <%= link_to "Entrar", new_session_path(resource_name) %>
