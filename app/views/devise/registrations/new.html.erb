  <div class="auth-card fade-in">

    <%= link_to '/', class: "brand" do %>
      Cool Beans
    <% end %>

    <h2 class="auth-title">Crear cuenta</h2>
    <p class="auth-subtitle">Empieza a fermentar como un pro ðŸ§‚</p>

    <%= simple_form_for(resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: { multipart: true }) do |f| %>

      <div class="auth-inputs">
        <%= f.input :first_name, label: false, input_html: { placeholder: "Nombre" } %>
        <%= f.input :last_name, label: false, input_html: { placeholder: "Apellidos" } %>
        <%= f.input :email, label: false, input_html: { placeholder: "Email" } %>
