<div class="container mt-5 p-5 bg-dark text-light border rounded-3 shadow" style="max-width: 600px;">
  <%= link_to '/', class: 'nav-link text-light text-center mb-5' do %>
    <h1 class="nav-title border p-2">Cool Beans</h1>
  <% end %>

  <div class="text-center mb-4">
    <h2>Registrate</h2>
  </div>

  <%= simple_form_for(resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: { class: "w-100", multipart: true }) do |f| %>

    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :first_name,
        label: "Nombre",
        required: true,
        input_html: {
          class: "form-control mb-3 rounded-3 bg-dark text-light border-light",
          placeholder: "Tu nombre"
        } %>

      <%= f.input :last_name,
        label: "Apellidos",
        required: true,
        input_html: {
          class: "form-control mb-3 rounded-3 bg-dark text-light border-light",
          placeholder: "Tus apellidos"
        } %>

      <%= f.input :email,
        label: "Correo electrónico",
        required: true,
        input_html: {
          class: "form-control mb-3 rounded-3 bg-dark text-light border-light",
          placeholder: "tu@email.com"
        } %>

      <%= f.input :password,
        label: "Contraseña",
        required: true,
        input_html: {
          class: "form-control mb-3 rounded-3 bg-dark text-light border-light"
        } %>

      <%= f.input :photo,
        as: :file,
        label: "Foto de perfil",
        required: true,
        input_html: {
          class: "form-control mb-3 rounded-3"
        } %>

    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Registrarse", class: "btn btn-outline-info w-50 mb-3" %>
    </div>

  <% end %>

  <div class="text-center">
    <p class="mb-2">¿Ya tienes cuenta?</p>
    <%= link_to "Entrar", new_session_path(resource_name), class: "btn btn-outline-light btn-sm" %>
  </div>
</div>
